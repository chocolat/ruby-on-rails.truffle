(trigger
    (key [[ctrl][shift]H]))

(name [Create Partial From Selection])

(only-in [source.ruby.rails, text.html.ruby, text.haml])

(input selection line)

(output replace-selected)

(save project)

(script [RUBYLIB="$TM_BUNDLE_SUPPORT/lib:$RUBYLIB"
"${TM_RUBY:=ruby}" -- "${TM_BUNDLE_SUPPORT}/bin/create_partial_from_selection.rb"
])